<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2><%= image_tag(site_logo_url, class: "image") %></h2>
    <div class="ui stacked segment form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'ui large form'} ) do |f| %>
        <div class="required field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: "E-mail address" %>
          </div>
        </div>
        <div class="required field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: 'off', placeholder: "Password" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="ui checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <%end%>
        <%= f.submit Hecms::User.human_attribute_name(:login), class: 'ui fluid large blue submit button' %>
      <%end%>
    </div>
  </div>
</div>
